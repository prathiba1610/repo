pipeline { 

 agent any 

 tools { 

 maven 'Maven' 

 } 

 stages { 

 stage('Build') { 

 steps { 

 script { 

 bat "mvn clean package" 

 } 

 } 

 post { 

 success { 

 echo "Archiving the Artifacts" 

 archiveArtifacts artifacts: '**/target/*.war' 

 } 

 } 

 } 

 stage('Deploy to Tomcat') { 

 steps { 

 script { 

deploy adapters: [tomcat9(credentialsId: '9fc6cc9c-f0d8-4fca-aefe-f6e2aa0a91f7', path: '', url: 'http://localhost:8080')], contextPath: '/ci-cd-jk', war: '**/*.war'
 } 

 } 

 } 

} 

 
